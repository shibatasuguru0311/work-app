.AccountPage
  .AccountPage__title
    = render "devise/shared/links"
  .picture
    = link_to root_path do
      =image_tag "triangle.png", alt: "APPï¼š", class: "picture__img"
  .AccountPage__box
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .signin-title LOG IN
      .FormBox
        .FormBox__label--normal
          = f.label :email
        .FormBox__input--normal
          = f.email_field :email, autofocus: true
        .FormBox
          .FormBox__label--normal
            = f.label :password
          .FormBox__input--normal
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "Start", class: 'actions-btn'
  .footer
  = render "works/footer"