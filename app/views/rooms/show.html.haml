.left-button
  = link_to "トップページへ戻る",root_path,class:"edit-link"
%h4.room-title  気になる同士
- @entries.each do |e|
  .user-name
    = image_tag e.user.image.url,:size => '50x40', class:"user-image" 
    = e.user.name
.chat
- if @messages.present?
  - @messages.each do |m|
    .chat-box
      .chat-face
        = image_tag m.user.image.url,:size => '50x40', class:"user-image" 
      .chat-hukidashi
        = m.message
        = m.created_at.strftime("%Y-%m-%d %H:%M")
.posts
=form_with model: @message, local: true, method: :post, class:"chat-speak" do |f|
  = f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field"
  = f.hidden_field :room_id, value: @room.id 
  = f.submit "投稿",class: 'form-submit'
